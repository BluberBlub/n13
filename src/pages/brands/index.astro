---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { brands } from "../../data/brands";
import { Image } from "astro:assets";
import heroImage from "../../assets/images/hero-n13.png";

const title = "Unsere Marken";
const description =
    "Entdecke unsere kuratierte Auswahl an Mode- und Lifestyle-Marken im N13. Von Desoto bis A Beautiful Story.";
---

<BaseLayout title={title} description={description}>
    <!-- Hero -->
    <section
        class="relative h-[60vh] min-h-[500px] flex items-center justify-center overflow-hidden"
    >
        <div class="absolute inset-0">
            <div
                class="w-full h-full bg-stone-800 animate-pulse transition-colors duration-700"
                id="brands-hero-loader"
            >
                <Image
                    src={heroImage}
                    alt="N13 Brands"
                    class="w-full h-full object-cover scale-105 opacity-0 transition-opacity duration-1000"
                    onload="this.classList.remove('opacity-0'); this.classList.add('animate-kenburns'); document.getElementById('brands-hero-loader').classList.remove('bg-stone-800', 'animate-pulse');"
                />
            </div>
            <div
                class="absolute inset-0 -bottom-1 bg-gradient-to-b from-stone-900/60 via-stone-900/40 to-white"
            >
            </div>
        </div>

        <div class="relative z-10 text-center px-6 max-w-5xl mx-auto mt-20">
            <div
                class="bg-white backdrop-blur-xl border border-white/30 rounded-sm px-8 py-14 md:px-16 md:py-20 shadow-2xl"
            >
                <span
                    class="inline-block text-accent text-xs md:text-sm tracking-[0.4em] uppercase font-semibold mb-8 border border-accent/30 px-5 py-2"
                >
                    Unsere Kollektionen
                </span>

                <h1
                    class="text-dark text-4xl md:text-6xl font-heading font-light tracking-wide mb-6"
                >
                    Unsere Markenwelt
                </h1>

                <div class="w-20 h-0.5 bg-accent mx-auto my-6"></div>

                <p
                    class="text-text-secondary text-lg md:text-xl max-w-2xl mx-auto font-light leading-relaxed"
                >
                    Eine handverlesene Auswahl an Labels, die uns durch
                    Qualität, Stil und Geschichte begeistern.
                </p>
            </div>
        </div>
    </section>

    <!-- Brands Grid -->
    <section
        class="py-24 bg-surface relative z-20 -mt-12 rounded-[3rem] shadow-[0_-20px_40px_-15px_rgba(0,0,0,0.1)] mb-0"
    >
        <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 lg:gap-14"
            >
                {
                    brands.map((brand) => (
                        <a
                            href={`/brands/${brand.slug}`}
                            class="group block bg-white shadow-[0_10px_30px_-10px_rgba(0,0,0,0.05)] hover:shadow-[0_20px_40px_-5px_rgba(0,0,0,0.1)] transition-all duration-500 hover:-translate-y-2 relative overflow-hidden"
                        >
                            <div class="aspect-[4/3] bg-bg-warm relative overflow-hidden flex items-center justify-center">
                                {brand.image ? (
                                    <div class="w-full h-full bg-gray-200 animate-pulse">
                                        <Image
                                            src={brand.image}
                                            alt={brand.name}
                                            width={400}
                                            class="w-full h-full object-cover transition-all duration-700 group-hover:scale-105 opacity-0 transition-opacity duration-500"
                                            onload="this.classList.remove('opacity-0'); this.parentElement.classList.remove('bg-gray-200', 'animate-pulse');"
                                        />
                                    </div>
                                ) : (
                                    <div class="flex flex-col items-center justify-center p-6 text-center z-10">
                                        <span class="font-heading text-3xl text-dark mb-2 group-hover:text-accent transition-colors duration-300">
                                            {brand.name}
                                        </span>
                                        <span class="text-xs text-text-muted uppercase tracking-widest opacity-60">
                                            N13 Selection
                                        </span>
                                    </div>
                                )}
                                <div class="absolute inset-0 bg-dark/0 group-hover:bg-dark/5 transition-colors duration-500" />
                            </div>
                            <div class="p-8 md:p-10 relative">
                                <div class="absolute top-0 left-8 md:left-10 -translate-y-1/2 bg-white p-2 rounded-full shadow-sm">
                                    <div class="w-8 h-8 rounded-full bg-bg-warm flex items-center justify-center text-accent text-xs">
                                        N13
                                    </div>
                                </div>
                                <div class="flex flex-wrap gap-2 mb-4 mt-2">
                                    {brand.categories.slice(0, 3).map((cat) => (
                                        <span class="text-[10px] uppercase tracking-wider px-2 py-1 bg-bg-warm text-dark/60">
                                            {cat}
                                        </span>
                                    ))}
                                </div>
                                <h3 class="font-heading text-2xl text-dark mb-3 group-hover:text-accent transition-colors duration-300">
                                    {brand.name}
                                </h3>
                                <p class="text-text-secondary text-base font-light line-clamp-2 leading-relaxed">
                                    {brand.shortDescription}
                                </p>
                                <div class="mt-6 flex items-center text-accent text-sm font-bold uppercase tracking-widest opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-2 group-hover:translate-y-0">
                                    Entdecken <span class="ml-2">→</span>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>

            <div class="mt-24 text-center">
                <p class="text-text-secondary text-xl mb-10 font-light">
                    Nicht das passende gefunden? <br />
                    Komm vorbei und lass dich von unserem gesamten Sortiment inspirieren.
                </p>
                <a
                    href="/#contact"
                    class="inline-block px-10 py-5 bg-white border border-border text-dark text-xs font-bold tracking-[0.2em] uppercase hover:bg-dark hover:text-white hover:border-dark transition-all duration-300 shadow-lg hover:shadow-xl"
                >
                    Kontakt & Anfahrt
                </a>
            </div>
        </div>
    </section>
</BaseLayout>
