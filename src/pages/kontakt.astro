---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm";
import { siteConfig } from "../data/site";
---

<BaseLayout
    title="Kontakt – N13"
    description="Nehmen Sie Kontakt mit uns auf. N13 GmbH & Co. KG, Marktplatz 10, 88239 Wangen im Allgäu."
>
    <!-- Hero -->
    <section class="relative pt-32 pb-20 bg-dark overflow-hidden">
        <div
            class="absolute inset-0 opacity-5"
            style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 40px 40px;"
        >
        </div>
        <div class="relative z-10 max-w-4xl mx-auto px-6 lg:px-8 text-center">
            <span
                class="text-accent text-sm tracking-[0.3em] uppercase font-medium"
            >
                Schreib uns
            </span>
            <h1
                class="font-heading text-4xl md:text-6xl font-light text-white mt-4 mb-6 tracking-wider"
            >
                Kontakt
            </h1>
            <p class="text-white/60 text-lg max-w-2xl mx-auto">
                Wir freuen uns über Deine Nachricht
            </p>
        </div>
    </section>

    <!-- Contact Section -->
    <section class="py-24 lg:py-32 bg-surface">
        <div class="max-w-6xl mx-auto px-6 lg:px-8">
            <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16">
                <!-- Form -->
                <div class="lg:col-span-3">
                    <h2
                        class="font-heading text-2xl md:text-3xl font-light text-dark mb-8"
                    >
                        Nachricht senden
                    </h2>
                    <ContactForm client:visible />
                </div>

                <!-- Contact Info -->
                <div class="lg:col-span-2">
                    <h2
                        class="font-heading text-2xl md:text-3xl font-light text-dark mb-8"
                    >
                        Kontaktdaten
                    </h2>

                    <div class="space-y-8">
                        <!-- Address -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center shrink-0 mt-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent"
                                    ><path
                                        d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
                                    ></path><circle cx="12" cy="10" r="3"
                                    ></circle></svg
                                >
                            </div>
                            <div>
                                <h3 class="font-medium text-dark mb-1">
                                    Adresse
                                </h3>
                                <p class="text-text-secondary text-sm">
                                    {siteConfig.company.legalName}<br />
                                    {siteConfig.company.address}<br />
                                    {siteConfig.company.zip}
                                    {siteConfig.company.city}
                                </p>
                            </div>
                        </div>

                        <!-- Phone -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center shrink-0 mt-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent"
                                    ><path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <h3 class="font-medium text-dark mb-1">
                                    Telefon
                                </h3>
                                <p class="text-text-secondary text-sm">
                                    <a
                                        href={`tel:${siteConfig.company.phone.replace(/\s/g, "")}`}
                                        class="hover:text-accent transition-colors"
                                    >
                                        {siteConfig.company.phone}
                                    </a>
                                </p>
                                <p class="text-text-secondary text-sm mt-1">
                                    Mobil: <a
                                        href={`tel:${siteConfig.company.mobile.replace(/\s/g, "")}`}
                                        class="hover:text-accent transition-colors"
                                    >
                                        {siteConfig.company.mobile}
                                    </a>
                                </p>
                            </div>
                        </div>

                        <!-- Email -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center shrink-0 mt-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent"
                                    ><rect
                                        width="20"
                                        height="16"
                                        x="2"
                                        y="4"
                                        rx="2"></rect><path
                                        d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                                    ></path></svg
                                >
                            </div>
                            <div>
                                <h3 class="font-medium text-dark mb-1">
                                    E-Mail
                                </h3>
                                <p class="text-text-secondary text-sm">
                                    <a
                                        href={`mailto:${siteConfig.company.email}`}
                                        class="hover:text-accent transition-colors"
                                    >
                                        {siteConfig.company.email}
                                    </a>
                                </p>
                            </div>
                        </div>

                        <!-- Opening Hours -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center shrink-0 mt-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent"
                                    ><circle cx="12" cy="12" r="10"
                                    ></circle><polyline
                                        points="12 6 12 12 16 14"
                                    ></polyline></svg
                                >
                            </div>
                            <div>
                                <h3 class="font-medium text-dark mb-1">
                                    Öffnungszeiten
                                </h3>
                                <p class="text-text-secondary text-sm">
                                    Mo – Fr: 10:00 – 18:00 Uhr<br />
                                    Sa: 10:00 – 15:00 Uhr
                                </p>
                            </div>
                        </div>

                        <!-- Instagram -->
                        <div class="flex items-start gap-4">
                            <div
                                class="w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center shrink-0 mt-1"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="18"
                                    height="18"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent"
                                    ><rect
                                        width="20"
                                        height="20"
                                        x="2"
                                        y="2"
                                        rx="5"
                                        ry="5"></rect><path
                                        d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                                    ></path><line
                                        x1="17.5"
                                        x2="17.51"
                                        y1="6.5"
                                        y2="6.5"></line></svg
                                >
                            </div>
                            <div>
                                <h3 class="font-medium text-dark mb-1">
                                    Social Media
                                </h3>
                                <p class="text-text-secondary text-sm">
                                    <a
                                        href={siteConfig.social.instagram}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="hover:text-accent transition-colors"
                                    >
                                        @n13store
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</BaseLayout>
