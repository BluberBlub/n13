---
import { siteConfig } from "../data/site";
---

<footer class="bg-dark text-white/80 -mt-12 relative z-0">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 pb-16 pt-28 lg:pb-20 lg:pt-32">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8"
        >
            <!-- Brand -->
            <div class="lg:col-span-1">
                <a href="/" class="block mb-4" aria-label="N13 Home">
                    <img
                        src="/images/logo-n13.png"
                        alt="N13 Logo"
                        class="h-12 w-auto brightness-0 invert opacity-90"
                    />
                </a>
                <p class="text-sm leading-relaxed text-white/60">
                    Mode & Lifestyle im Herzen von Wangen im Allgäu. Individuell
                    wie Du.
                </p>
                <a
                    href={siteConfig.social.instagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 mt-6 text-sm text-white/60 hover:text-accent transition-colors duration-300"
                    aria-label="Instagram"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><rect width="20" height="20" x="2" y="2" rx="5" ry="5"
                        ></rect><path
                            d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"
                        ></path><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"
                        ></line></svg
                    >
                    @n13store
                </a>
            </div>

            <!-- Contact -->
            <div>
                <h3 class="font-heading text-lg font-medium text-white mb-6">
                    Kontakt
                </h3>
                <ul class="space-y-3 text-sm">
                    <li class="flex items-start gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="mt-0.5 shrink-0"
                            ><path
                                d="M20 10c0 4.993-5.539 10.193-7.399 11.799a1 1 0 0 1-1.202 0C9.539 20.193 4 14.993 4 10a8 8 0 0 1 16 0"
                            ></path><circle cx="12" cy="10" r="3"></circle></svg
                        >
                        <span
                            >{siteConfig.company.address}<br />{
                                siteConfig.company.zip
                            }
                            {siteConfig.company.city}</span
                        >
                    </li>
                    <li class="flex items-center gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="shrink-0"
                            ><path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path></svg
                        >
                        <a
                            href={`tel:${siteConfig.company.phone.replace(/\s/g, "")}`}
                            class="hover:text-accent transition-colors"
                        >
                            {siteConfig.company.phone}
                        </a>
                    </li>
                    <li class="flex items-center gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="shrink-0"
                            ><rect width="20" height="16" x="2" y="4" rx="2"
                            ></rect><path
                                d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
                            ></path></svg
                        >
                        <a
                            href={`mailto:${siteConfig.company.email}`}
                            class="hover:text-accent transition-colors"
                        >
                            {siteConfig.company.email}
                        </a>
                    </li>
                </ul>
            </div>

            <!-- Opening Hours -->
            <div>
                <h3 class="font-heading text-lg font-medium text-white mb-6">
                    Öffnungszeiten
                </h3>
                <ul class="space-y-3 text-sm">
                    <li class="flex items-start gap-3">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="16"
                            height="16"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            class="mt-0.5 shrink-0"
                            ><circle cx="12" cy="12" r="10"></circle><polyline
                                points="12 6 12 12 16 14"></polyline></svg
                        >
                        <div>
                            <p>Mo – Fr: 10:00 – 18:00 Uhr</p>
                            <p>Sa: 10:00 – 15:00 Uhr</p>
                        </div>
                    </li>
                </ul>
            </div>

            <!-- Navigation -->
            <div>
                <h3 class="font-heading text-lg font-medium text-white mb-6">
                    Navigation
                </h3>
                <ul class="space-y-3 text-sm">
                    <li>
                        <a
                            href="/#about"
                            class="hover:text-accent transition-colors duration-300"
                            >Über Uns</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#brands"
                            class="hover:text-accent transition-colors duration-300"
                            >Marken</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#contact"
                            class="hover:text-accent transition-colors duration-300"
                            >Kontakt</a
                        >
                    </li>
                    <li class="pt-3 border-t border-white/10">
                        <a
                            href="/impressum"
                            class="hover:text-accent transition-colors duration-300"
                        >
                            Impressum
                        </a>
                    </li>
                    <li>
                        <a
                            href="/datenschutzerklaerung"
                            class="hover:text-accent transition-colors duration-300"
                        >
                            Datenschutz
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Bottom Bar -->
        <div
            class="mt-16 pt-8 border-t border-white/10 flex flex-col md:flex-row items-center justify-between gap-4"
        >
            <p class="text-xs text-white/40">
                © {new Date().getFullYear()}
                {siteConfig.company.legalName}. Alle Rechte vorbehalten.
            </p>
        </div>
    </div>
</footer>
