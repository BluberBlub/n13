---
interface Props {
    text: string;
    repeat?: number;
}

const { text, repeat = 10 } = Astro.props;
---

<div
    class="relative flex overflow-x-hidden bg-accent/10 py-4 border-y border-accent/20"
>
    <div class="animate-marquee whitespace-nowrap flex gap-8 items-center">
        {
            Array(repeat)
                .fill(null)
                .map(() => (
                    <span class="mx-4 text-4xl md:text-6xl font-heading font-bold text-white/20 uppercase tracking-widest">
                        {text}
                    </span>
                ))
        }
    </div>

    <div
        class="absolute top-0 animate-marquee2 whitespace-nowrap flex gap-8 items-center"
    >
        {
            Array(repeat)
                .fill(null)
                .map(() => (
                    <span class="text-4xl md:text-6xl font-heading font-bold text-transparent stroke-text uppercase tracking-widest opacity-30">
                        {text} â€¢
                    </span>
                ))
        }
    </div>
</div>

<style>
    .stroke-text {
        -webkit-text-stroke: 1px currentColor;
        color: transparent;
    }
</style>
